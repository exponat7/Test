<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestApplication</title>

    <environment include="Development">
        @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />*@
        <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.min.css" />
    </environment>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="body">
        <div class="leftright"></div>
        <div class="middle">
            <header class="top-navigation">
                <div class="top-navigation-panel">
                    <div class="nav-container"><a asp-area="" asp-controller="Home" asp-action="Index">TestApplication</a></div>
                    <div style="display:flex;width:100%;justify-content:flex-end;">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </header>
            <div class="main">
                <partial name="_CookieConsentPartial" />
                <main role="main" class="main-main">
                    @RenderBody()
                </main>
            </div>
            <footer class="footer">
                <hr />
                <div class="footer-part">
                    <div>&copy;2019 - TestApplication</div>
                </div>
            </footer>
        </div>
        <div class="leftright" id="notifies"></div>
    </div>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/jquery-ui/jquery-ui.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/aspnet-signalr/1.1.4/signalr.js"></script>
        @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>*@
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/aspnet-signalr/1.1.4/signalr.min.js"></script>
    </environment>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
